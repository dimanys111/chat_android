<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_par"
    tools:context=".RandomFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/tv_pol_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваш пол"
                    android:textColor="#E4BEBE" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_pol_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c1"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="мужской"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c2"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="женский"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c3"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="неизвестный"
                        app:chipMinTouchTargetSize="2dp" />
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/tv_pol_they"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пол собеседника"
                    android:textColor="#E4BEBE" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_pol_their"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c4"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="мужской"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c5"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="женский"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c6"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="не важно"
                        app:chipMinTouchTargetSize="2dp" />
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout

            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/tv_old_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваш возраст"
                    android:textColor="#E4BEBE" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_old_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c11"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="14-17"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c12"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17-25"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c13"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="25-35"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c14"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="35-45"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c15"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45-100"
                        app:chipMinTouchTargetSize="2dp" />


                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/tv_old_they"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Возраст собеседника"
                    android:textColor="#E4BEBE" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_old_their"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c21"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="14-17"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c22"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17-25"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c23"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="25-35"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c24"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="35-45"
                        app:chipMinTouchTargetSize="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/c25"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45-100"
                        app:chipMinTouchTargetSize="2dp" />
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/tv_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваше желание"
                android:textColor="#E4BEBE" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_want"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/c31"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Любви"
                    app:chipMinTouchTargetSize="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c32"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Интима"
                    app:chipMinTouchTargetSize="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c33"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Помочь"
                    app:chipMinTouchTargetSize="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c34"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Поддержки"
                    app:chipMinTouchTargetSize="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c35"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Поговорить"
                    app:chipMinTouchTargetSize="2dp" />


            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <com.google.android.material.chip.Chip
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/bg_chip_state_list"
            android:text="Начать поиск"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.chat.ui.BlurredLayout
        android:id="@+id/bl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false">


    </com.example.chat.ui.BlurredLayout>

    <LinearLayout
        android:id="@+id/ll_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp">

                <Button
                    android:id="@+id/but_search_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Завершить поиск"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                </Button>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Поиск собеседника"
                    android:textColor="#E4BEBE"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar"
                    app:layout_constraintVertical_bias="0.110000014" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:indeterminateDrawable="@drawable/spinner_ring"
                    android:indeterminateOnly="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>